<ul>
  <% @tasks.each do |task| %>
   <li class="list-inline">
      <input type="checkbox" <%= task.completed ? "checked" : "" %>/>
      <%= link_to task.title, task_path(task.id) %>
        <%= link_to "", task_path(task),
          class: "far fa-trash-alt",
          method: :delete,
          data: { confirm: "Are you sure?" } %>
      </i>
    </li>
  <% end %>
</ul>
